{
    "$schema": "https://raw.githubusercontent.com/F5Networks/f5-appsvcs-extension/master/schema/latest/as3-schema-3.11.0-3.json",
    
    "class": "AS3",
    "action": "deploy",
    "persist": true,
    "declaration": {
        "class": "ADC",
        "schemaVersion": "3.9.0",
        "id": "http_lb_1",
        "label": "Basic HTTP",
        "remark": "Basic HTTP Example with monitor",
        "www_acme_com": {
            "class": "Tenant",
            "http_app": {
                "class": "Application",
                "template": "http",
                "serviceMain": {
                    "class": "Service_HTTP",
                    "virtualAddresses": [
                        "10.1.10.51"
                    ],
                    "virtualPort": 80,
                    "pool": "http_pool"
                },
                "http_pool": {
                    "class": "Pool",
                    "monitors": [
                        {
                            "use": "http_monitor"
                        }
                    ],
                    "members": [
                        {
                            "servicePort": 80,
                            "shareNodes": true,
                            "serverAddresses": [
                                "10.1.10.102",
                                "10.1.10.103"
                            ]
                        }
                    ]
                },
                "http_monitor": {
                    "class": "Monitor",
                    "monitorType": "http",
                    "interval": 30,
                    "timeout": 91,
                    "adaptive": false
                }
            }
        }
    }
}
